{
    "extends": "eslint:recommended",
    "ecmaFeatures": {
        "jsx": true,
        "modules": true
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "rules": {
        "indent": [ 2, 4, {"SwitchCase": 1} ],
        "quotes": [ 2, "double" ],
        "no-unused-vars": [ 2, { "args": "none" } ],
        "linebreak-style": [ 2, "unix" ],
        "semi": [ 2, "always" ]
    },
    "parser": "babel-eslint"
}
